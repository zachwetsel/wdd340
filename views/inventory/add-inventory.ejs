<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <main class="container">
      <h1><%= title %></h1>

      <% if (typeof message !== 'undefined' && message) { %>
        <div class="flash"><%- message %></div>
      <% } %>

      <% if (typeof errors !== 'undefined' && errors.length) { %>
        <ul class="form-errors">
          <% errors.forEach(e => { %><li><%- e.msg %></li><% }) %>
        </ul>
      <% } %>

      <form action="/inv/add-inventory" method="post" novalidate class="form-card">
        <div class="form-row">
          <label for="classificationList">Classification</label>
          <%- classificationList %>
        </div>

        <div class="form-row">
          <label for="inv_make">Make</label>
          <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>">
        </div>

        <div class="form-row">
          <label for="inv_model">Model</label>
          <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>">
        </div>

        <div class="form-row">
          <label for="inv_year">Year</label>
          <input type="number" id="inv_year" name="inv_year" min="1900" max="2100" required value="<%= inv_year %>">
        </div>

        <div class="form-row">
          <label for="inv_description">Description</label>
          <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>
        </div>

        <div class="form-row">
          <label for="inv_image">Image Path</label>
          <input type="text" id="inv_image" name="inv_image" required value="<%= inv_image %>">
          <small>Example: /images/vehicles/no-image.png</small>
        </div>

        <div class="form-row">
          <label for="inv_thumbnail">Thumbnail Path</label>
          <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= inv_thumbnail %>">
          <small>Example: /images/vehicles/no-image-tn.png</small>
        </div>

        <div class="form-row">
          <label for="inv_price">Price</label>
          <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" required value="<%= inv_price %>">
        </div>

        <div class="form-row">
          <label for="inv_miles">Miles</label>
          <input type="number" id="inv_miles" name="inv_miles" min="0" step="1" required value="<%= inv_miles %>">
        </div>

        <div class="form-row">
          <label for="inv_color">Color</label>
          <input type="text" id="inv_color" name="inv_color" required value="<%= inv_color %>">
        </div>

        <button type="submit" class="btn-primary">Add Vehicle</button>
      </form>
    </main>
  </body>
</html>
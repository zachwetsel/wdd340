<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>

    <main class="container">
      <h1><%= title %></h1>

      <h2>Welcome <%= accountData.account_firstname %></h2>

      <% if (accountData.account_type === 'Admin' || accountData.account_type === 'Employee') { %>
        <h3>Inventory Management</h3>
      <p><a href="/inv">Manage Inventory</a></p>
      <% } %>

<p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>

      <% if (typeof message !== 'undefined' && message) { %>
        <div class="flash flash-success"><%- message %></div>
      <% } %>

      <% if (typeof errors !== 'undefined' && errors && errors.length) { %>
        <ul class="form-errors">
          <% errors.forEach(e => { %><li><%- e.msg %></li><% }) %>
        </ul>
      <% } %>

      <% if (locals.accountData) { %>
        <li><a href="/account/favorites">My Favorites</a></li>
      <% } %>

      <p>You're logged in.</p>
    </main>
  </body>
</html>